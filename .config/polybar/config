[colors]
background = ${xrdb:background}
background-alt = ${xrdb:color8}
foreground = ${xrdb:foreground}
foreground-alt = ${xrdb:color15}

cyan = ${xrdb:color6}
green = ${xrdb:color2}
yellow = ${xrdb:color3}
red = ${xrdb:color1}

[bar/mybar]
width = 100%
height = 30
radius-top = 5
fixed-center = false

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 3
line-color = ${colors.background-alt}

padding-left = 0
padding-right = 2

module-margin-left = 0
module-margin-right = 2

font-0 = DejaVu Sans Mono:style=Bold:size=12;2
font-1 = Font Awesome 5 Free,Font Awesome 5 Free Solid:style=Solid:size=12;2
font-2 = Font Awesome 5 Brands,Font Awesome 5 Brands Regular:style=Regular:size=12;2

modules-left = i3
modules-center =
modules-right = backlight-acpi pulseaudio wlan eth1 eth2 battery0 battery1 temperature date

locale = en_US.UTF-8

cursor-click = pointer
cursor-scroll = ns-resize

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false

ws-icon-0 = 1;ï„¡
ws-icon-1 = 2;ï† 
ws-icon-2 = 3;ï‚†
ws-icon-3 = 4;ï¡¼
ws-icon-4 = 5;ï»
